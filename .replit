modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["geckodriver", "glibcLocales", "libxcrypt"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Car Service App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Car Service App (port 5000)"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Car Service App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd car_service && python app.py"
waitForPort = 8080

[[workflows.workflow]]
name = "Car Service App (port 5000)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd car_service && PORT=5000 python -c \"import app; app.app.run(host='0.0.0.0', port=5000, debug=True)\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 3001
